<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food2"/>
    <Button
        android:id="@+id/btn_chinese"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/round"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:text="Chinese" />

    <Button
        android:id="@+id/btn_northIndain"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="277dp"
        android:text="North Indian" />

    <Button
        android:id="@+id/btn_southIndian"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="312dp"
        android:text="South Indian" />

    <Button
        android:id="@+id/btn_italian"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:text="Italian" />

    <TextView
        android:id="@+id/tv_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Choose your cuisine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="283dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-38dp"
        android:layout_marginBottom="30dp"
        android:text="Call reception to order @ 141"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F8FFFFFF" />


</RelativeLayout>